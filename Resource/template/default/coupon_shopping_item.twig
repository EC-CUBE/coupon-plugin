<script type="text/javascript">
    $(function () {
        $('#coupon_button').click(function () {
            $(this).attr('disabled', 'disabled');
            $.ajax({
                type: 'POST',
                data: $('#shopping-form').serialize(),
                url: '{{ url("shopping_redirect_to") }}',
                success: function(data) {
                    window.location.href = '{{ url('plugin_coupon_shopping') }}';
                },
                error: function() {
                    window.location.href = '{{ url('plugin_coupon_shopping') }}';
                }
            });
            return false;
        });
    })
</script>

<div class="ec-orderConfirm">
    <div class="ec-rectHeading">
        <h2>{{ 'front.plugin.coupon.shopping.header'|trans }}</h2>
    </div>
    <div id="customer_detail_box" class="column is-edit">
        {% if CouponOrder %}
            <strong class="text-danger">{{ 'front.plugin.coupon.shopping.message.use_code'|trans({'%code%': CouponOrder.coupon_cd }) }}</strong>
        {% else %}
            {{ 'front.plugin.coupon.shopping.message.empty'|trans }}
        {% endif %}
        <p><a class="btn btn-default btn-sm" id="coupon_button" href="{{ url('plugin_coupon_shopping') }}">{{ 'front.plugin.coupon.shopping.button.add_coupon'|trans }}</a></p>
    </div>
</div>
